<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">

 <fire>
  <bulletRef label="half">
   <param>1</param>
  </bulletRef>
 </fire>

 <fire>
  <bulletRef label="half">
   <param>-1</param>
  </bulletRef>
 </fire>

 <wait>90 + 100 / (5 - 4 * $rank)</wait>

</action>

<bullet label="half">
<direction type="absolute">0</direction>
<speed>0</speed>
<action>

 <fire>
  <direction type="absolute">4 * (5 - 4 * $rank) * $1</direction>
  <bulletRef label="laser">
   <param>0.8</param>
  </bulletRef>
 </fire>
 <wait>1</wait>

 <repeat><times>30 / (5 - 4 * $rank)</times><action>
  <repeat><times>2</times><action>
   <fire>
    <direction type="sequence">6 * (5 - 4 * $rank) * $1</direction>
    <bulletRef label="laser">
     <param>0.8</param>
    </bulletRef>
   </fire>
  </action></repeat>
  <wait>1</wait>
 </action></repeat>

 <fire>
  <direction type="aim">0</direction>
  <bulletRef label="laser">
   <param>0.9</param>
  </bulletRef>
 </fire>
 <wait>1</wait>

 <repeat><times>30 / (5 - 4 * $rank)</times><action>
  <repeat><times>2</times><action>
   <fire>
    <direction type="sequence">6 * (5 - 4 * $rank) * $1</direction>
    <bulletRef label="laser">
     <param>0.9</param>
    </bulletRef>
   </fire>
  </action></repeat>
  <wait>1</wait>
 </action></repeat>

 <fire>
  <direction type="absolute">11 * $1</direction>
  <bulletRef label="laser">
   <param>1.2</param>
  </bulletRef>
 </fire>
 <wait>1</wait>

 <repeat><times>30 / (5 - 4 * $rank)</times><action>
  <repeat><times>2</times><action>
   <fire>
    <direction type="sequence">6 * (5 - 4 * $rank) * $1</direction>
    <bulletRef label="laser">
     <param>1.2</param>
    </bulletRef>
   </fire>
  </action></repeat>
  <wait>1</wait>
 </action></repeat>

 <vanish/>

</action></bullet>

<bullet label="laser">
<speed>0.01</speed>
<action>

  <fire>
   <direction type="relative">0</direction>
   <speed>$1</speed>
   <bullet/>
  </fire>
  <wait>3</wait>

 <repeat><times>4</times><action>
  <fire>
   <direction type="sequence">2.5 - 2.0 * $rank</direction>
   <speed>$1</speed>
   <bullet/>
  </fire>
  <wait>3</wait>
 </action></repeat>

 <vanish/>

</action></bullet>

</bulletml>
