<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">

    <fire>
       <bulletRef label="parentbit"/>
    </fire>

  <wait>650</wait>

</action>

<action label="slash">

    <fire>
      <direction type="absolute">360 * $rand</direction>
      <speed>0.22</speed>
      <bulletRef label="spiralbit">
        <param>150</param>
      </bulletRef>
    </fire>
    <fire>
      <direction type="sequence">120</direction>
      <speed>0.22</speed>
      <bulletRef label="spiralbit">
        <param>150</param>
      </bulletRef>
    </fire>
    <fire>
      <direction type="sequence">120</direction>
      <speed>0.22</speed>
      <bulletRef label="spiralbit">
        <param>150</param>
      </bulletRef>
    </fire>

    <fire>
      <direction type="sequence">180</direction>
      <speed>0.2</speed>
      <bulletRef label="spiralbit">
        <param>120</param>
      </bulletRef>
    </fire>
    <fire>
      <direction type="sequence">120</direction>
      <speed>0.2</speed>
      <bulletRef label="spiralbit">
        <param>120</param>
      </bulletRef>
    </fire>
    <fire>
      <direction type="sequence">120</direction>
      <speed>0.2</speed>
      <bulletRef label="spiralbit">
        <param>120</param>
      </bulletRef>
    </fire>

    <fire>
      <direction type="sequence">150</direction>
      <speed>0.17</speed>
      <bulletRef label="spiralbit">
        <param>-150</param>
      </bulletRef>
    </fire>
    <fire>
      <direction type="sequence">120</direction>
      <speed>0.17</speed>
      <bulletRef label="spiralbit">
        <param>-150</param>
      </bulletRef>
    </fire>
    <fire>
      <direction type="sequence">120</direction>
      <speed>0.17</speed>
      <bulletRef label="spiralbit">
        <param>-150</param>
      </bulletRef>
    </fire>

    <fire>
      <direction type="sequence">180</direction>
      <speed>0.25</speed>
      <bulletRef label="spiralbit">
        <param>-120</param>
      </bulletRef>
    </fire>
    <fire>
      <direction type="sequence">120</direction>
      <speed>0.25</speed>
      <bulletRef label="spiralbit">
        <param>-120</param>
      </bulletRef>
    </fire>
    <fire>
      <direction type="sequence">120</direction>
      <speed>0.25</speed>
      <bulletRef label="spiralbit">
        <param>-120</param>
      </bulletRef>
    </fire>

  <repeat><times>18</times><action>
    <fire>
      <direction type="sequence">10</direction>
      <speed type="absolute">1.0</speed>
      <bullet/>
    </fire>
    <fire>
      <direction type="sequence">0</direction>
      <speed type="sequence">-0.1</speed>
      <bullet/>
    </fire>
    <fire>
      <direction type="sequence">0</direction>
      <speed type="sequence">-0.1</speed>
      <bullet/>
    </fire>
    <fire>
      <direction type="sequence">0</direction>
      <speed type="sequence">-0.1</speed>
      <bullet/>
    </fire>

    <fire>
      <direction type="sequence">10</direction>
      <speed type="absolute">1.0</speed>
      <bullet/>
    </fire>
    <fire>
      <direction type="sequence">0</direction>
      <speed type="sequence">-0.3</speed>
      <bullet/>
    </fire>
    <fire>
      <direction type="sequence">0</direction>
      <speed type="sequence">-0.1</speed>
      <bullet/>
    </fire>
    <fire>
      <direction type="sequence">0</direction>
      <speed type="sequence">-0.1</speed>
      <bullet/>
    </fire>
    <fire>
      <direction type="sequence">0</direction>
      <speed type="sequence">-0.1</speed>
      <bullet/>
    </fire>
  </action></repeat>

</action>

<bullet label="parentbit">
<direction type="absolute">170 + 20 * $rand</direction>
<speed>1.8</speed>
<action>

  <wait>40</wait>
  <changeSpeed>
    <speed>0.0001</speed>
    <term>1</term>
  </changeSpeed>
  <wait>5</wait>

  <actionRef label="arrow"/>

  <repeat><times>3</times><action>
    <wait>5</wait>
    <changeSpeed>
      <speed>1.8</speed>
      <term>1</term>
    </changeSpeed>
    <changeDirection>
      <direction type="relative">170 + 20 * $rand</direction>
      <term>1</term>
    </changeDirection>

    <wait>40</wait>
    <changeSpeed>
      <speed>0.0001</speed>
      <term>1</term>
    </changeSpeed>
    <wait>5</wait>

    <actionRef label="arrow"/>

  </action></repeat>

  <wait>80</wait>

  <changeSpeed>
    <speed>1.8</speed>
    <term>1</term>
  </changeSpeed>
  <changeDirection>
    <direction type="relative">170 + 20 * $rand</direction>
    <term>1</term>
  </changeDirection>

  <wait>40</wait>
  <changeSpeed>
    <speed>0.0001</speed>
    <term>1</term>
  </changeSpeed>
  <wait>5</wait>

  <actionRef label="slash"/>

  <wait>150</wait>

  <changeSpeed>
    <speed>1.8</speed>
    <term>1</term>
  </changeSpeed>
  <changeDirection>
    <direction type="aim">-30 + 60 * $rand</direction>
    <term>1</term>
  </changeDirection>

  <wait>15</wait>
  <changeSpeed>
    <speed>0.0001</speed>
    <term>1</term>
  </changeSpeed>
  <wait>5</wait>

  <actionRef label="slash"/>

  <vanish/>

</action>
</bullet>

<action label="arrow">

    <fire>
      <direction type="aim">0</direction>
      <speed type="absolute">1.3</speed>
      <bullet/>
    </fire>
    <fire>
      <direction type="sequence">0</direction>
      <speed type="sequence">-0.1</speed>
      <bullet/>
    </fire>

    <fire>
      <direction type="sequence">-3</direction>
      <speed type="sequence">0.0</speed>
      <bullet/>
    </fire>
    <fire>
      <direction type="sequence">6</direction>
      <speed type="sequence">0.0</speed>
      <bullet/>
    </fire>

    <fire>
      <direction type="sequence">-3</direction>
      <speed type="sequence">-0.1</speed>
      <bullet/>
    </fire>
    <fire>
      <direction type="sequence">0</direction>
      <speed type="sequence">-0.1</speed>
      <bullet/>
    </fire>
    <fire>
      <direction type="sequence">0</direction>
      <speed type="sequence">-0.1</speed>
      <bullet/>
    </fire>

</action>

<bullet label="spiralbit">
<action>

  <changeDirection>
    <direction type="relative">$1</direction>
    <term>90</term>
  </changeDirection>

  <repeat><times>2 + 6 * $rank</times><action>
    <fire>
      <direction type="relative">0</direction>
      <bulletRef label="spiral">
        <param>-$1</param>
      </bulletRef>
    </fire>
    <fire>
      <direction type="relative">90</direction>
      <speed type="relative">0.6</speed>
      <bullet/>
    </fire>
    <wait>10 - 7 * $rank</wait>

    <fire>
      <direction type="relative">0</direction>
      <bulletRef label="spiral">
        <param>$1</param>
      </bulletRef>
    </fire>
    <fire>
      <direction type="relative">-90</direction>
      <speed type="relative">0.6</speed>
      <bullet/>
    </fire>
    <wait>10 - 7 * $rank</wait>

  </action></repeat>

  <vanish/>

</action>
</bullet>

<bullet label="spiral">
<speed type="relative">0.8</speed>
<action>

  <wait>20</wait>

  <changeDirection>
    <direction type="relative">$1</direction>
    <term>90</term>
  </changeDirection>

</action>
</bullet>

</bulletml>
