<bullet label="cross">
 <action>
  <wait>15</wait>
  <changeSpeed>
   <speed>0</speed>
   <term>1</term>
  </changeSpeed>
  <fire>
   <direction type="absolute">360*$1*$2</direction>
   <speed>1+$rank*$rank*1</speed>
   <bullet/>
  </fire>
  <fire>
   <direction type="sequence">180*$2</direction>
   <speed>1+$rank*$rank*1</speed>
   <bullet/>
  </fire>
  <repeat><times>49</times>
   <action>
    <wait>4-$rank*2</wait>
    <fire>
     <direction type="sequence">187.7*$2</direction>
     <speed>1+$rank*$rank*1</speed>
     <bullet/>
    </fire>
    <fire>
     <direction type="sequence">180*$2</direction>
     <speed>1+$rank*$rank*1</speed>
     <bullet/>
    </fire>
   </action>
  </repeat>
