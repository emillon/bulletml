<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">

 <repeat> <times>6 + 6 * $rank</times> <action>
 <fire>
  <bulletRef label="dummyaim">
   <param>120</param>
  </bulletRef>
 </fire>

 <wait>37 - 20 * $rank</wait>

 <fire>
  <bulletRef label="dummyaim">
   <param>-120</param>
  </bulletRef>
 </fire>

 <wait>37 - 20 * $rank</wait>

 </action></repeat>

 <fire>
  <direction type="absolute">0</direction>
  <speed>0</speed>
  <bulletRef label="dummyrotate">
   <param>0</param>
   <param>1.1</param>
   <param>30</param>
   <param>110</param>
  </bulletRef>
 </fire>

 <fire>
  <direction type="absolute">0</direction>
  <speed>0</speed>
  <bulletRef label="dummyrotate">
   <param>120</param>
   <param>1.1</param>
   <param>30</param>
   <param>110</param>
  </bulletRef>
 </fire>

 <fire>
  <direction type="absolute">0</direction>
  <speed>0</speed>
  <bulletRef label="dummyrotate">
   <param>240</param>
   <param>1.1</param>
   <param>30</param>
   <param>110</param>
  </bulletRef>
 </fire>

 <fire>
  <direction type="absolute">0</direction>
  <speed>0</speed>
  <bulletRef label="dummyrotate">
   <param>60</param>
   <param>1.1</param>
   <param>30</param>
   <param>-70</param>
  </bulletRef>
 </fire>

 <fire>
  <direction type="absolute">0</direction>
  <speed>0</speed>
  <bulletRef label="dummyrotate">
   <param>180</param>
   <param>0.9+$rank*0.2</param>
   <param>30</param>
   <param>-70</param>
  </bulletRef>
 </fire>

 <fire>
  <direction type="absolute">0</direction>
  <speed>0</speed>
  <bulletRef label="dummyrotate">
   <param>300</param>
   <param>0.9+$rank*0.2</param>
   <param>30</param>
   <param>-70</param>
  </bulletRef>
 </fire>

 <repeat> <times>8</times> <action>
 <fire>
  <bulletRef label="dummyaim">
   <param>120</param>
  </bulletRef>
 </fire>

 <wait>57 - 20 * $rank</wait>

 <fire>
  <bulletRef label="dummyaim">
   <param>-120</param>
  </bulletRef>
 </fire>

 <wait>57 - 20 * $rank</wait>

 </action></repeat>

 <wait>100</wait>

</action>

<bullet label="dummyaim">
 <direction type="absolute">0</direction>
 <speed>0</speed>
 <action>
 <fire>
  <direction type="absolute">$1</direction>
   <speed>2 * (0.5 + 0.5 * $rank)</speed>
   <bulletRef label="bitaim">
    <param>2 * (0.5 + 0.5 * $rank)</param>
    <param>60 / (2 * (0.5 + 0.5 * $rank))</param>
   </bulletRef>
  </fire>
  <vanish/>
 </action>
</bullet>

<bullet label="dummyrotate"><action>

 <fire>
  <direction type="absolute">$1</direction>
  <speed>$2</speed>
  <bulletRef label="bit">
   <param>$2</param>
   <param>$3</param>
   <param>$4</param>
  </bulletRef>
 </fire>

 <wait>37 - 20 * $rank</wait>

 <repeat> <times>578/(37-20*$rank)</times> <action>
 <fire>
  <direction type="sequence">50</direction>
  <speed>$2</speed>
  <bulletRef label="bit">
   <param>$2</param>
   <param>$3</param>
   <param>$4</param>
  </bulletRef>
 </fire>

 <wait>37 - 20 * $rank</wait>

 </action></repeat>

 <vanish/>

</action></bullet>

<bullet label="bit"><action>

 <wait>$2</wait>

 <changeSpeed>
  <speed>0</speed>
  <term>1</term>
 </changeSpeed>

 <fire>
  <direction type="relative">$3</direction>
  <speed>$1 * 1.1</speed>
  <bulletRef label="bit">
   <param>$1 * 1.1</param>
   <param>$2 * 1.2</param>
   <param>$3</param>
  </bulletRef>
 </fire>

 <wait>3</wait>

 <repeat> <times>3</times> <action>
  <fire>
   <direction type="sequence">0</direction>
   <speed>$1 * 1.1</speed>
   <bullet/>
  </fire>
  <wait>3</wait>
 </action></repeat>

 <vanish/>

</action></bullet>

<bullet label="bitaim"><action>

 <wait>$2</wait>

 <changeSpeed>
  <speed>0.5 * (0.5 + 0.5 * $rank)</speed>
  <term>1</term>
 </changeSpeed>

 <wait>30 / (0.5 * (0.5 + 0.5 * $rank))</wait>

 <changeSpeed>
  <speed>0</speed>
  <term>1</term>
 </changeSpeed>

 <fire>
  <direction type="aim">0</direction>
  <speed>$1 * 1.1</speed>
  <bulletRef label="bitaim">
   <param>$1 * 1.1</param>
   <param>$2 * (1.7 - 0.4 * $rank)</param>
  </bulletRef>
 </fire>

 <wait>2</wait>

 <repeat> <times>10</times> <action>
  <fire>
   <direction type="sequence">0</direction>
   <speed>$1 * 1.1</speed>
   <bulletRef label="weak">
    <param>$2 * (1.7 - 0.4 * $rank)</param>
   </bulletRef>
  </fire>
  <fire>
   <direction type="sequence">0</direction>
   <speed>$1 * 1.05</speed>
   <bulletRef label="weak">
    <param>$2 * (1.7 - 0.4 * $rank)</param>
   </bulletRef>
  </fire>
  <wait>2</wait>
 </action></repeat>

 <vanish/>

</action></bullet>

<bullet label="weak"><action>

 <wait>$1</wait>

 <changeSpeed>
  <speed>0.5 * (0.5 + 0.5 * $rank)</speed>
  <term>1</term>
 </changeSpeed>

 <wait>30 / (0.5 * (0.5 + 0.5 * $rank))</wait>

 <vanish/>

</action></bullet>

</bulletml>
