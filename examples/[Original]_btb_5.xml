<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">

 <fire>
  <bulletRef label="dummy">
   <param>72 * $rand</param>
  </bulletRef>
 </fire>

 <wait>880</wait>

</action>

<bullet label="dummy">
<direction type="absolute">0</direction>
<speed>0</speed>
<action>

  <fire>
   <direction type="absolute">$1</direction>
   <bulletRef label="winder">
    <param>2.0</param>
   </bulletRef>
  </fire>

 <repeat> <times>4</times> <action>
  <fire>
   <direction type="sequence">72</direction>
   <bulletRef label="winder">
    <param>2.0</param>
   </bulletRef>
  </fire>
 </action></repeat>

 <wait>420</wait>

  <fire>
   <direction type="absolute">$1 + 96</direction>
   <bulletRef label="shotgun">
    <param>1.0 + 1.0 * $rank</param>
   </bulletRef>
  </fire>

 <repeat> <times>4</times> <action>
  <fire>
   <direction type="sequence">72</direction>
   <bulletRef label="shotgun">
    <param>1.0 + 1.0 * $rank</param>
   </bulletRef>
  </fire>
 </action></repeat>

 <wait>350</wait>

  <fire>
   <direction type="absolute">$1 - 24</direction>
   <bulletRef label="shotgun">
    <param>1.0 + 1.0 * $rank</param>
   </bulletRef>
  </fire>

 <repeat> <times>4</times> <action>
  <fire>
   <direction type="sequence">72</direction>
   <bulletRef label="shotgun">
    <param>1.0 + 1.0 * $rank</param>
   </bulletRef>
  </fire>
 </action></repeat>

 <vanish/>

</action></bullet>

<bullet label="shotgun">
<speed>0.001</speed>
<action>

 <fire>
  <direction type="relative">-34</direction>
  <speed>$1 * 0.93</speed>
  <bullet/>
 </fire>

 <repeat> <times>68 / (12 - 10 * $rank * $rank)</times> <action>
 <fire>
  <direction type="sequence">12 - 10 * $rank * $rank</direction>
  <speed>$1 * 0.93</speed>
  <bullet/>
 </fire>
 </action></repeat>

 <wait>5</wait>

 <fire>
  <direction type="sequence">-1</direction>
  <speed>$1</speed>
  <bullet/>
 </fire>

 <repeat> <times>66 / (12 - 10 * $rank * $rank)</times> <action>
 <fire>
  <direction type="sequence">-(12 - 10 * $rank * $rank)</direction>
  <speed>$1</speed>
  <bullet/>
 </fire>
 </action></repeat>

 <vanish/>

</action></bullet>

<bullet label="winder">
<speed>0.001</speed>
<action>

 <repeat> <times>10</times> <action>
 <fire>
  <direction type="relative">0</direction>
  <bulletRef label="laser">
   <param>$1</param>
  </bulletRef>
 </fire>
 <wait>14</wait>
 </action></repeat>

 <repeat> <times>15</times> <action>
 <fire>
  <direction type="sequence">4</direction>
  <bulletRef label="laser">
   <param>$1</param>
  </bulletRef>
 </fire>
 <wait>14</wait>
 </action></repeat>

 <repeat> <times>10</times> <action>
 <fire>
  <direction type="sequence">0</direction>
  <bulletRef label="laser">
   <param>$1</param>
  </bulletRef>
 </fire>
 <wait>14</wait>
 </action></repeat>

 <repeat> <times>15</times> <action>
 <fire>
  <direction type="sequence">-8</direction>
  <bulletRef label="laser">
   <param>$1</param>
  </bulletRef>
 </fire>
 <wait>14</wait>
 </action></repeat>

 <repeat> <times>10</times> <action>
 <fire>
  <direction type="sequence">0</direction>
  <bulletRef label="laser">
   <param>$1</param>
  </bulletRef>
 </fire>
 <wait>14</wait>
 </action></repeat>

 <vanish/>

</action></bullet>

<bullet label="laser">
<speed>0.01</speed>
<action>

  <fire>
   <direction type="relative">1</direction>
   <speed>$1</speed>
   <bullet/>
  </fire>
  <wait>1</wait>

 <repeat> <times>3</times> <action>
  <fire>
   <direction type="sequence">2</direction>
   <speed>$1</speed>
   <bullet/>
  </fire>
  <wait>1</wait>

  <fire>
   <direction type="sequence">-2</direction>
   <speed>$1</speed>
   <bullet/>
  </fire>
  <wait>1</wait>
 </action></repeat>

  <fire>
   <direction type="sequence">-2</direction>
   <speed>$1</speed>
   <bullet/>
  </fire>
  <wait>1</wait>

 <repeat> <times>3</times> <action>
  <fire>
   <direction type="sequence">-2</direction>
   <speed>$1</speed>
   <bullet/>
  </fire>
  <wait>1</wait>

  <fire>
   <direction type="sequence">2</direction>
   <speed>$1</speed>
   <bullet/>
  </fire>
  <wait>1</wait>
 </action></repeat>

 <vanish/>

</action></bullet>

</bulletml>
