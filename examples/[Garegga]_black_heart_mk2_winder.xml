<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
 <fire>
  <direction type="absolute">135</direction>
  <bulletRef label="winder"/>
 </fire>
 <fire>
  <direction type="absolute">225</direction>
  <bulletRef label="winder"/>
 </fire>

 <wait>220</wait>
</action>

<bullet label="winder">

<speed>2.3</speed>

<action>
 <wait>10</wait>
 <changeSpeed>
  <speed>0</speed>
  <term>1</term>
 </changeSpeed>

 <fire>
  <direction type="absolute">230</direction>
  <bullet> <action> <vanish/> </action> </bullet>
 </fire>

 <actionRef label="move">
  <param>0</param>
  <param>40</param>
 </actionRef>

 <actionRef label="move">
  <param>0.7+$rank</param>
  <param>20</param>
 </actionRef>

 <actionRef label="move">
  <param>-0.7-$rank</param>
  <param>40</param>
 </actionRef>

 <actionRef label="move">
  <param>0.7+$rank</param>
  <param>20</param>
 </actionRef>

 <vanish/>

</action> </bullet>

<action label="move">
 <repeat> <times>$2</times> <action>
  <fire>
   <direction type="sequence">$1-100</direction>
   <speed>5</speed>
   <bullet/>
  </fire>
  <repeat> <times>4</times> <action>
   <fire>
    <direction type="sequence">25</direction>
    <speed>5</speed>
    <bullet/>
   </fire>
  </action> </repeat>

  <wait>2</wait>

 </action> </repeat>
</action>

</bulletml>
