<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">

  <repeat><times>2</times><action>
    <fire>
      <direction type="absolute">180 - 60</direction>
      <bulletRef label="wave">
        <param>5</param>
        <param>42</param>
      </bulletRef>
    </fire>
    <wait>30 - 15 * $rank</wait>
    <fire>
      <direction type="absolute">180 + 60</direction>
      <bulletRef label="wave">
        <param>-5</param>
        <param>-42</param>
      </bulletRef>
    </fire>
    <wait>30 - 15 * $rank</wait>
    <fire>
      <direction type="absolute">180 - 62</direction>
      <bulletRef label="wave">
        <param>5</param>
        <param>40</param>
      </bulletRef>
    </fire>
    <wait>30 - 15 * $rank</wait>
    <fire>
      <direction type="absolute">180 + 62</direction>
      <bulletRef label="wave">
        <param>-5</param>
        <param>-40</param>
      </bulletRef>
    </fire>
    <wait>30 - 15 * $rank</wait>
    <fire>
      <direction type="absolute">180 - 58</direction>
      <bulletRef label="wave">
        <param>5</param>
        <param>40</param>
      </bulletRef>
    </fire>
    <wait>30 - 15 * $rank</wait>
    <fire>
      <direction type="absolute">180 + 58</direction>
      <bulletRef label="wave">
        <param>-5</param>
        <param>-40</param>
      </bulletRef>
    </fire>
    <wait>30 - 15 * $rank</wait>

  </action></repeat>

  <wait>300 - 50 * $rank</wait>

</action>

<bullet label="wave">
<speed>1.0</speed>
<action>

  <fire>
    <direction type="relative">$2</direction>
    <speed>0.3</speed>
    <bulletRef label="cross"/>
  </fire>
  <wait>3</wait>
  <repeat><times>10 + 20 * $rank * $rank</times><action>
    <fire>
      <direction type="sequence">$1</direction>
      <speed type="sequence">0.05</speed>
      <bulletRef label="cross"/>
    </fire>
    <wait>3</wait>
  </action></repeat>

  <vanish/>

</action>
</bullet>

<bullet label="cross">
<action>

  <wait>100</wait>

  <fire>
    <direction type="relative">0</direction>
    <speed type="relative">0.6 * $rank</speed>
    <bullet/>
  </fire>
  <fire>
    <direction type="relative">90</direction>
    <speed type="relative">0.6 * $rank</speed>
    <bullet/>
  </fire>
  <fire>
    <direction type="relative">180</direction>
    <speed type="relative">0.6 * $rank</speed>
    <bullet/>
  </fire>
  <fire>
    <direction type="relative">270</direction>
    <speed type="relative">0.6 * $rank</speed>
    <bullet/>
  </fire>

  <vanish/>

</action>
</bullet>

</bulletml>
