<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">

 <repeat> <times>10</times> <action>

  <fire>
   <direction type="absolute">180 + 18</direction>
   <speed>3</speed>
   <bulletRef label="bit">
    <param>1.7</param>
    <param>30</param>
    <param>-144</param>
   </bulletRef>
  </fire>

  <wait>15</wait>

  <fire>
   <direction type="absolute">180 - 18</direction>
   <speed>3</speed>
   <bulletRef label="bit">
    <param>1.7</param>
    <param>30</param>
    <param>144</param>
   </bulletRef>
  </fire>

  <wait>30</wait>
 </action></repeat>

 <wait>450</wait>

</action>

<bullet label="bit"><action>

 <wait>$2</wait>

 <changeSpeed>
  <speed>0</speed>
  <term>1</term>
 </changeSpeed>

 <fire>
  <direction type="relative">$3</direction>
  <speed>$1</speed>
  <bulletRef label="bit">
   <param>$1</param>
   <param>$2 * 1.2</param>
   <param>$3</param>
  </bulletRef>
 </fire>

 <fire>
  <direction type="sequence">0</direction>
  <speed>0</speed>
  <bulletRef label="nobit">
   <param>$1 * (0.5 + 0.5 * $rank)</param>
  </bulletRef>
 </fire>

 <repeat> <times>15</times> <action>
  <fire>
   <direction type="sequence">0</direction>
   <speed>$1</speed>
   <bulletRef label="weak">
   <param>$2 * 1.2</param>
   </bulletRef>
  </fire>
  <wait>2</wait>
 </action></repeat>

 <vanish/>

</action></bullet>

<bullet label="nobit"><action>

 <fire>
  <direction type="aim">0</direction>
  <speed>$1</speed>
  <bullet/>
 </fire>

 <repeat> <times>4</times> <action>
  <fire>
   <direction type="sequence">0</direction>
   <speed>$1</speed>
   <bullet/>
  </fire>
  <wait>2</wait>
 </action></repeat>

 <vanish/>

</action></bullet>

<bullet label="weak"><action>

 <wait>$1</wait>

 <vanish/>

</action></bullet>

</bulletml>
