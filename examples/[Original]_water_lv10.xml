<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">

 <repeat> <times>10</times> <action>

  <fire>
   <direction type="absolute">180 - 30</direction>
   <speed>3</speed>
   <bulletRef label="longbit">
    <param>1.7</param>
    <param>30</param>
    <param>-120</param>
   </bulletRef>
  </fire>

  <wait>15</wait>

  <fire>
   <direction type="absolute">180 + 30</direction>
   <speed>3</speed>
   <bulletRef label="longbit">
    <param>1.7</param>
    <param>30</param>
    <param>120</param>
   </bulletRef>
  </fire>

  <wait>30</wait>
 </action></repeat>

 <wait>450</wait>

</action>

<bullet label="longbit"><action>

 <wait>$2</wait>

 <changeSpeed>
  <speed>0.0001</speed>
  <term>1</term>
 </changeSpeed>

 <fire>
  <direction type="relative">$3</direction>
  <speed>$1</speed>
  <bulletRef label="shortbit">
   <param>$1</param>
   <param>$2 * 0.2</param>
   <param>$3</param>
  </bulletRef>
 </fire>

 <fire>
  <direction type="sequence">0</direction>
  <speed>0</speed>
  <bulletRef label="longnobit"/>
 </fire>

 <repeat> <times>15</times> <action>
  <fire>
   <direction type="sequence">0</direction>
   <speed>$1</speed>
   <bulletRef label="weak">
   <param>$2 * 0.2</param>
   </bulletRef>
  </fire>
  <wait>2</wait>
 </action></repeat>

 <vanish/>

</action></bullet>

<bullet label="shortbit"><action>

 <wait>$2</wait>

 <changeSpeed>
  <speed>0.0001</speed>
  <term>1</term>
 </changeSpeed>

 <fire>
  <direction type="relative">$3</direction>
  <speed>$1</speed>
  <bulletRef label="longbit">
   <param>$1</param>
   <param>$2 * 6.0</param>
   <param>$3</param>
  </bulletRef>
 </fire>

 <fire>
  <direction type="sequence">0</direction>
  <speed>0</speed>
  <bulletRef label="shortnobit"/>
 </fire>

 <repeat> <times>15</times> <action>
  <fire>
   <direction type="sequence">0</direction>
   <speed>$1</speed>
   <bulletRef label="weak">
   <param>$2 * 6.0</param>
   </bulletRef>
  </fire>
  <wait>2</wait>
 </action></repeat>

 <vanish/>

</action></bullet>

<bullet label="longnobit"><action>

 <fire>
  <direction type="aim">-(60- 40 * $rank)</direction>
  <speed>3.6 - 2.0 * $rank</speed>
  <bullet/>
 </fire>
 <fire>
  <direction type="aim">0</direction>
  <speed>0.8 + 0.5 * $rank</speed>
  <bullet/>
 </fire>
 <fire>
  <direction type="aim">(60- 40 * $rank)</direction>
  <speed>3.6 - 2.0 * $rank</speed>
  <bullet/>
 </fire>

 <vanish/>

</action></bullet>

<bullet label="shortnobit"><action>

 <fire>
  <direction type="aim">-((40 - 30 * $rank) * 3)</direction>
  <speed>3.6 - 2.0 * $rank</speed>
  <bullet/>
 </fire>
 <fire>
  <direction type="aim">-(40 - 30 * $rank)</direction>
  <speed>3.3 - 2.0 * $rank</speed>
  <bullet/>
 </fire>
 <fire>
  <direction type="aim">(40 - 30 * $rank)</direction>
  <speed>3.3 - 2.0 * $rank</speed>
  <bullet/>
 </fire>
 <fire>
  <direction type="aim">((40 - 30 * $rank) * 3)</direction>
  <speed>3.6 - 2.0 * $rank</speed>
  <bullet/>
 </fire>

 <vanish/>

</action></bullet>

<bullet label="weak"><action>

 <wait>$1</wait>

 <vanish/>

</action></bullet>

</bulletml>