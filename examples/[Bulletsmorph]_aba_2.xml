<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">

  <repeat><times>8</times><action>
    <actionRef label="center">
      <param>90 * $rand</param>
      <param>1</param>
    </actionRef>
    <wait>12</wait>
    <actionRef label="center">
      <param>90 * $rand</param>
      <param>-1</param>
    </actionRef>
    <wait>12</wait>
    <actionRef label="center">
      <param>30 * $rand</param>
      <param>1</param>
    </actionRef>
    <wait>12</wait>
    <actionRef label="center">
      <param>30 * $rand</param>
      <param>-1</param>
    </actionRef>
    <wait>12</wait>
  </action></repeat>

  <wait>150</wait>

</action>

<action label="center">

  <fire>
    <direction type="absolute">360 * $rand</direction>
    <bulletRef label="circle">
      <param>$1</param>
      <param>$2</param>
    </bulletRef>
  </fire>
  <repeat><times>(4 + 8 * $rank) - 1</times><action>
    <fire>
      <direction type="sequence">360 / (4 + 8 * $rank)</direction>
      <bulletRef label="circle">
        <param>$1</param>
        <param>$2</param>
      </bulletRef>
    </fire>
  </action></repeat>

</action>

<bullet label="circle">
<speed>1.3</speed>
<action>

  <wait>20</wait>

  <changeDirection>
    <direction type="absolute">180 + $1 * $2</direction>
    <term>1</term>
  </changeDirection>

  <wait>125 - $1</wait>

  <fire>
    <direction type="aim">0</direction>
    <bulletRef label="red"/>
  </fire>

  <vanish/>

</action>
</bullet>

<bullet label="red">
<speed>0.1</speed>
<action>

  <changeSpeed>
    <speed>4.0</speed>
    <term>300</term>
  </changeSpeed>

</action>
</bullet>


</bulletml>
