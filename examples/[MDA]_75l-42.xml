<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
 <fire> <bullet>
  <direction type="absolute">120</direction>
  <speed>9.2-$rank*4</speed>
  <actionRef label="right"/>
 </bullet> </fire>
 <fire> <bullet>
  <direction type="absolute">240</direction>
  <speed>9.2-$rank*4</speed>
  <actionRef label="left"/>
 </bullet> </fire>
 <wait>40</wait>
 <fire> <bullet>
  <direction type="absolute">240</direction>
  <speed>9.2-$rank*4</speed>
 <actionRef label="right"/>
 </bullet> </fire>
 <fire> <bullet>
  <direction type="absolute">120</direction>
  <speed>9.2-$rank*4</speed>
  <actionRef label="left"/>
 </bullet> </fire>
 <wait>100</wait>
</action>

<action label="right">
 <repeat>
  <times>32</times>
  <action>
   <fireRef label="shoot">
    <param>0+1</param>
    <param>1.4</param>
   </fireRef>
   <fireRef label="shoot">
    <param>60+1</param>
    <param>0.7</param>
   </fireRef>
   <fireRef label="shoot">
    <param>300+1</param>
    <param>2.1</param>
   </fireRef>
   <wait>1</wait>
  </action>
 </repeat>
</action>

<action label="left">
 <repeat>
  <times>32</times>
  <action>
   <fireRef label="shoot">
    <param>360-1</param>
    <param>1.4</param>
   </fireRef>
   <fireRef label="shoot">
    <param>300-1</param>
    <param>0.7</param>
   </fireRef>
   <fireRef label="shoot">
    <param>60-1</param>
    <param>2.1</param>
   </fireRef>
   <wait>1</wait>
  </action>
 </repeat>
</action>

<fire label="shoot">
 <direction type="sequence">$1</direction>
 <speed>$2</speed>
 <bullet>
  <action>
   <wait>45</wait>
   <accel>
    <vertical>4.2</vertical>
    <term>120</term>
   </accel>
  </action>
 </bullet>
</fire>




</bulletml>
