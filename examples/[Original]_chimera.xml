<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
    <fire>
      <direction type="aim">0</direction>
      <bulletRef label="centerbit">
      </bulletRef>
    </fire>

  <wait>450</wait>

</action>

<bullet label="centerbit">
<direction type="absolute">180</direction>
<speed>3.0</speed>
<action>

  <wait>40</wait>
  <changeSpeed>
    <speed>0.001</speed>
    <term>1</term>
  </changeSpeed>
  <wait>5</wait>
  <changeDirection>
    <direction type="absolute">160 + 40 * $rand</direction>
    <term>90</term>
  </changeDirection>
    <fire>
      <direction type="absolute">60</direction>
      <bulletRef label="sidebit">
        <param>-40</param>
      </bulletRef>
    </fire>
    <fire>
      <direction type="absolute">-60</direction>
      <bulletRef label="sidebit">
        <param>40</param>
      </bulletRef>
    </fire>

  <wait>90</wait>

  <repeat><times>3</times><action>
    <changeDirection>
      <direction type="aim">170 + 20 * $rand</direction>
      <term>1</term>
    </changeDirection>
    <changeSpeed>
      <speed>0.85</speed>
      <term>1</term>
    </changeSpeed>

    <wait>40</wait>
    <changeSpeed>
      <speed>0.001</speed>
      <term>1</term>
    </changeSpeed>
    <wait>5</wait>

    <fire>
      <direction type="aim">60</direction>
      <bulletRef label="sidebit">
        <param>-40</param>
      </bulletRef>
    </fire>
    <fire>
      <direction type="aim">-60</direction>
      <bulletRef label="sidebit">
        <param>40</param>
      </bulletRef>
    </fire>
    <wait>45</wait>
  </action></repeat>

  <vanish/>

</action>
</bullet>


<bullet label="sidebit">
<speed>0.5</speed>
<action>

  <wait>30</wait>
  <changeSpeed>
    <speed>0.001</speed>
    <term>1</term>
  </changeSpeed>
  <wait>5</wait>

  <repeat><times>30 + 220 * $rank * $rank</times><action>
    <fire>
      <direction type="relative">$1 - 45 + 90 * $rand</direction>
      <speed>3.5 + 1.0 * $rand</speed>
      <bullet/>
    </fire>
  </action></repeat>

  <vanish/>

</action>
</bullet>


</bulletml>
