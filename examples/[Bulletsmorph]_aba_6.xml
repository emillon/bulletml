<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">

  <actionRef label="allway"/>
  <actionRef label="bar"/>

  <wait>200</wait>

</action>

<action label="allway">

  <fire>
    <direction type="aim">15</direction>
    <bulletRef label="allwaybit"/>
  </fire>
  <repeat><times>11</times><action>
    <fire>
      <direction type="sequence">30</direction>
      <bulletRef label="allwaybit"/>
    </fire>
  </action></repeat>

</action>


<bullet label="allwaybit">
<speed>6.0</speed>
<action>

  <repeat><times>999</times><action>
    <fire>
      <direction type="relative">90</direction>
      <bulletRef label="stopandgo"/>
    </fire>
    <fire>
      <direction type="relative">-90</direction>
      <bulletRef label="stopandgo"/>
    </fire>
    <wait>6 - 4 * $rank</wait>
  </action></repeat>

</action>
</bullet>

<bullet label="stopandgo">
<speed>1.0</speed>
<action>

  <wait>20</wait>
  <changeSpeed>
    <speed>0.0001</speed>
    <term>1</term>
  </changeSpeed>
  <wait>40</wait>

  <changeSpeed>
    <speed>4.0</speed>
    <term>300</term>
  </changeSpeed>

</action>
</bullet>

<action label="bar">

  <fire>
    <bulletRef label="barhand">
      <param>1</param>
    </bulletRef>
  </fire>
  <fire>
    <bulletRef label="barhand">
      <param>-1</param>
    </bulletRef>
  </fire>

</action>

<bullet label="barhand">
<direction type="absolute">0</direction>
<speed>0.0001</speed>
<action>

  <fire>
    <direction type="absolute">90</direction>
    <speed>4.0 - 2.0 * $rank</speed>
    <bulletRef label="barbit">
      <param>1</param>
    </bulletRef>
  </fire>
  <repeat><times>2 + 3 * $rank</times><action>
    <fire>
      <direction type="sequence">0</direction>
      <speed type="sequence">4.0 - 2.0 * $rank</speed>
      <bulletRef label="barbit">
        <param>1</param>
      </bulletRef>
    </fire>
  </action></repeat>
  <fire>
    <direction type="sequence">180</direction>
    <speed>4.0 - 2.0 * $rank</speed>
    <bulletRef label="barbit">
      <param>-1</param>
    </bulletRef>
  </fire>
  <repeat><times>2 + 3 * $rank</times><action>
    <fire>
      <direction type="sequence">0</direction>
      <speed type="sequence">4.0 - 2.0 * $rank</speed>
      <bulletRef label="barbit">
        <param>-1</param>
      </bulletRef>
    </fire>
  </action></repeat>
  <wait>5</wait>

  <repeat><times>20</times><action>
    <fire>
      <direction type="sequence">180 + 10 * $1</direction>
      <speed>4.0 - 2.0 * $rank</speed>
      <bulletRef label="barbit">
        <param>1</param>
      </bulletRef>
    </fire>
    <repeat><times>2 + 3 * $rank</times><action>
      <fire>
        <direction type="sequence">0</direction>
        <speed type="sequence">4.0 - 2.0 * $rank</speed>
        <bulletRef label="barbit">
          <param>1</param>
        </bulletRef>
      </fire>
    </action></repeat>
    <fire>
      <direction type="sequence">180</direction>
      <speed>4.0 - 2.0 * $rank</speed>
      <bulletRef label="barbit">
        <param>-1</param>
      </bulletRef>
    </fire>
    <repeat><times>2 + 3 * $rank</times><action>
      <fire>
        <direction type="sequence">0</direction>
        <speed type="sequence">4.0 - 2.0 * $rank</speed>
        <bulletRef label="barbit">
          <param>-1</param>
        </bulletRef>
      </fire>
    </action></repeat>
    <wait>5</wait>
  </action></repeat>

  <vanish/>

</action>
</bullet>

<bullet label="barbit">
<action>

  <wait>5</wait>
  <changeSpeed>
    <speed>0.0001</speed>
    <term>1</term>
  </changeSpeed>
  <wait>5</wait>

  <fire>
    <direction type="relative">90 * $1</direction>
    <speed>1.3</speed>
    <bullet/>
  </fire>
  <repeat><times>2</times><action>
    <fire>
      <direction type="sequence">0</direction>
      <speed type="sequence">0.1</speed>
      <bullet/>
    </fire>
  </action></repeat>

  <vanish/>

</action>
</bullet>

</bulletml>
