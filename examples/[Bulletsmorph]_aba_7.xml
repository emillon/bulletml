<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">

  <repeat><times>3</times><action>
    <fire>
      <direction type="absolute">90</direction>
      <speed>1.1</speed>
      <bulletRef label="dummy"/>
    </fire>
    <wait>60</wait>
    <fire>
      <direction type="absolute">-90</direction>
      <speed>1.1</speed>
      <bulletRef label="dummy"/>
    </fire>
    <wait>60</wait>
  </action></repeat>

  <wait>250 - 50 * $rank</wait>

</action>

<bullet label="dummy">
<action>

  <wait>60</wait>

  <fire>
    <direction type="aim">-32</direction>
    <speed>1.1</speed>
    <bulletRef label="bit"/>
  </fire>
  <repeat><times>8</times><action>
    <fire>
      <direction type="sequence">8</direction>
      <speed type="sequence">0</speed>
      <bulletRef label="bit"/>
    </fire>
  </action></repeat>

  <vanish/>

</action>
</bullet>

<bullet label="bit">
<action>

  <wait>20</wait>

  <fire>
    <direction type="relative">0</direction>
    <speed type="relative">0.3</speed>
    <bulletRef label="slowdown"/>
  </fire>
  <repeat><times>2 + 4 * $rank</times><action>
    <fire>
      <direction type="relative">0</direction>
      <speed type="sequence">0.3</speed>
      <bulletRef label="slowdown"/>
    </fire>
  </action></repeat>

  <wait>20</wait>
  <changeDirection>
    <direction type="aim">(30 - 20 * $rank) * (-1.0 + 2.0 * $rand)</direction>
    <term>1</term>
  </changeDirection>
  <changeSpeed>
    <speed type="relative">2.0 + 2.0 * $rank</speed>
    <term>300</term>
  </changeSpeed>

</action>
</bullet>

<bullet label="slowdown">
<action>

  <wait>20</wait>
  <changeSpeed>
    <speed>0.3</speed>
    <term>60</term>
  </changeSpeed>

</action>
</bullet>

</bulletml>
