<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
 <fire>
  <direction type="absolute">150</direction>
  <speed>4</speed>
  <bulletRef label="roll"/>
 </fire>
 <wait>2</wait>
 <fire>
  <direction type="absolute">210</direction>
  <speed>4</speed>
  <bulletRef label="roll"/>
 </fire>
 <wait>2</wait>
 <fire>
  <direction type="absolute">135</direction>
  <speed>3</speed>
  <bulletRef label="roll"/>
 </fire>
 <wait>2</wait>
 <fire>
  <direction type="absolute">225</direction>
  <speed>3</speed>
  <bulletRef label="roll"/>
 </fire>
 <wait>2</wait>
 <fire>
  <direction type="absolute">135</direction>
  <speed>2</speed>
  <bulletRef label="roll"/>
 </fire>
 <wait>2</wait>
 <fire>
  <direction type="absolute">225</direction>
  <speed>2</speed>
  <bulletRef label="roll"/>
 </fire>

 <wait>60</wait>
</action>

<bullet label="roll">

<action>
 <wait>10</wait>
 <changeSpeed>
  <speed>0</speed>
  <term>1</term>
 </changeSpeed>

 <repeat> <times>45</times> <action>
  <fire>
   <direction type="sequence">8</direction>
   <speed>1.3+$rank</speed>
   <bullet/>
  </fire>
 </action> </repeat>

 <vanish/>

</action> </bullet>

</bulletml>
