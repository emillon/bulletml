<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">

    <fire>
      <direction type="absolute">60</direction>
      <bulletRef label="bit"/>
    </fire>
    <wait>300</wait>

</action>

<bullet label="bit">
<speed>3.0</speed>
<action>

  <wait>20</wait>

  <changeSpeed>
    <speed>0</speed>
    <term>1</term>
  </changeSpeed>
  <wait>2</wait>

    <fire>
      <bulletRef label="groundbit"/>
    </fire>

  <wait>30</wait>

    <fire>
      <bulletRef label="skybit"/>
    </fire>

  <vanish/>

</action>
</bullet>

<bullet label="skybit">
<direction type="absolute">210</direction>
<speed>3.0</speed>
<action>

  <wait>30</wait>

  <repeat><times>4</times><action>
    <wait>10</wait>
    <fire>
      <direction type="absolute">110 + 20 * $rand</direction>
      <bulletRef label="dummy"/>
    </fire>
  </action></repeat>

  <vanish/>

</action>
</bullet>

<bullet label="groundbit">
<direction type="absolute">180</direction>
<speed>3.0</speed>
<action>

  <wait>20</wait>

  <repeat><times>3</times><action>
    <wait>10</wait>
    <fire>
      <direction type="absolute">230 + 20 * $rand</direction>
      <bulletRef label="dummy"/>
    </fire>
  </action></repeat>

  <vanish/>

</action>
</bullet>

<bullet label="dummy">
<speed>0.001</speed>
<action>

  <repeat><times>5 + 15 * $rank</times><action>
    <fire>
      <direction type="relative">-10 + 20 * $rand</direction>
      <speed>1.0 + 1.4 * $rank</speed>
      <bullet/>
    </fire>
    <repeat><times>5</times><action>
      <fire>
        <direction type="sequence">0</direction>
        <speed type="sequence">0.1</speed>
        <bullet/>
      </fire>
    </action></repeat>
    <wait>12 - 10 * $rank</wait>
  </action></repeat>

  <vanish/>

</action>
</bullet>

</bulletml>