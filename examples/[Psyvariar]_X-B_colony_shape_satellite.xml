<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
<repeat><times>5</times>
<action>
 <fire>
  <direction type="absolute">152</direction>
  <bulletRef label="norm"/>
 </fire>
 <repeat><times>8</times>
 <action>
  <fire>
   <direction type="sequence">7</direction>
   <bulletRef label="norm"/>
  </fire>
 </action>
 </repeat>
 <wait>8</wait>
</action>
</repeat>
<wait>10</wait>
<repeat><times>7</times>
<action>
 <fire>
  <direction type="absolute">180-45+$rand*90</direction>
  <bulletRef label="norm"/>
 </fire>
 <repeat><times>4</times>
 <action>
  <fire>
   <direction type="sequence">0</direction>
   <speed>1.5</speed>
   <bulletRef label="norm"/>
  </fire>
  <wait>4</wait>
 </action>
 </repeat>
</action>
</repeat>
<wait>10</wait>
<repeat><times>12</times>
<action>
 <fire>
  <direction>0</direction>
  <speed>2</speed>
  <bulletRef label="norm"/>
 </fire>
 <wait>6</wait>
</action>
</repeat>
</action>

<bullet label="norm">
<speed>1</speed>
</bullet>

</bulletml>
