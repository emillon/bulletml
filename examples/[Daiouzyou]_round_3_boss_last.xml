<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<bullet label="Dummy">
 <action>
  <vanish/>
 </action>
</bullet>

<action label="top">
 <fire>
  <direction type="absolute">100</direction>
  <speed>3</speed>
  <bulletRef label="armSrc">
   <param>1</param>
  </bulletRef>
 </fire>
 <fire>
  <direction type="absolute">-100</direction>
  <speed>3</speed>
  <bulletRef label="armSrc">
   <param>0</param>
  </bulletRef>
 </fire>

 <fireRef label="center"/>

 <wait>500</wait>
</action>

<action label="center3">
 <fire>
  <direction type="aim">-10.5*$1</direction>
  <bulletRef label="Dummy"/>
 </fire>

 <repeat> <times>3</times> <action>
 <repeat> <times>6</times> <action>

  <fire>
   <direction type="sequence">$1</direction>
   <speed>1+$rank</speed>
   <bullet/>
  </fire>

  <repeat> <times>3</times> <action>
   <fire>
    <direction type="sequence">90</direction>
    <speed type="sequence">0</speed>
    <bullet/>
   </fire>
  </action> </repeat>

  <wait>5</wait>
 </action> </repeat>

 <fire>
  <direction type="sequence">$1</direction>
  <bullet> <action> <vanish/> </action> </bullet>
 </fire>

 <wait>5</wait>
 </action> </repeat>
</action>

<fire label="center">
 <direction type="absolute">180</direction>
 <speed>5</speed>

 <bullet> <action>
  <wait>10</wait>
  <changeSpeed>
   <speed>0</speed>
   <term>1</term>
  </changeSpeed>

  <repeat> <times>2</times> <action>
   <actionRef label="center3">
    <param>-4</param>
   </actionRef>
   <wait>30</wait>
   <actionRef label="center3">
    <param>4</param>
   </actionRef>
   <wait>30</wait>
  </action> </repeat>

  <vanish/>

 </action> </bullet>
</fire>

<bullet label="armSrc"> <action>
 <wait>12</wait>

 <changeSpeed>
  <speed>0</speed>
  <term>1</term>
 </changeSpeed>

 <wait>1</wait>

 <fireRef label="arm">
  <param>8-16*$1</param>
  <param>0</param>
 </fireRef>
 <wait>2</wait>

 <fireRef label="arm">
  <param>8-16*$1</param>
  <param>90</param>
 </fireRef>
 <wait>2</wait>

 <fireRef label="arm">
  <param>8-16*$1</param>
  <param>180</param>
 </fireRef>
 <wait>2</wait>

 <fireRef label="arm">
  <param>8-16*$1</param>
  <param>270</param>
 </fireRef>

 <vanish/>

</action> </bullet>

<fire label="arm">
 <speed>0</speed>

 <bullet> <action>

  <fire>
   <direction type="absolute">$2</direction>
   <speed>1.5</speed>
   <bullet/>
  </fire>

  <repeat> <times>80+$rank*80</times> <action>
   <wait>480/(80+$rank*80)</wait>
   <fire>
	<direction type="sequence">$1</direction>
	<speed type="sequence">0</speed>
	<bullet/>
   </fire>
  </action> </repeat>

  <vanish/>

 </action> </bullet>
</fire>

</bulletml>
