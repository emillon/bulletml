<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">
<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">
	<action  label="top">
		<repeat>
			<times>
				 5+$rank*10
			</times>
			<action>
				<fireRef  label="backFire"/>
			</action>
		</repeat>
		<wait>
			 300
		</wait>
	</action>
	<fire  label="backFire">
		<direction>
			 50-$rand*100
		</direction>
		<speed>
			 1.2
		</speed>
		<bullet>
			<action>
				<repeat>
					<times>
						 10
					</times>
					<action>
						<changeDirection>
							<direction>
								 150-$rand*300
							</direction>
							<term>
								 30
							</term>
						</changeDirection>
						<repeat>
							<times>
								 5
							</times>
							<action>
								<wait>
									 6
								</wait>
								<fire>
									<direction  type="relative">
										180
									</direction>
									<speed>
										 1.2
									</speed>
									<bullet/>
								</fire>
							</action>
						</repeat>
					</action>
				</repeat>
				<repeat>
					<times>
						 999
					</times>
					<action>
						<wait>
							 6
						</wait>
						<fire>
							<direction  type="relative">
								180
							</direction>
							<speed>
								 1.2
							</speed>
							<bullet/>
						</fire>
					</action>
				</repeat>
			</action>
		</bullet>
	</fire>
</bulletml>
