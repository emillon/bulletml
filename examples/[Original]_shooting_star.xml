<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">

  <fire>
   <direction type="absolute">75 + 10 * $rand</direction>
   <speed>1.5</speed>
   <bulletRef label="star">
    <param>215 + 10 * $rand</param>
   </bulletRef>
  </fire>

  <wait>50</wait>

  <fire>
   <direction type="absolute">-(75 + 10 * $rand)</direction>
   <speed>1.5</speed>
   <bulletRef label="star">
    <param>-(215 + 10 * $rand)</param>
   </bulletRef>
  </fire>

  <wait>30</wait>

  <fire>
   <direction type="absolute">75 + 10 * $rand</direction>
   <speed>1.5</speed>
   <bulletRef label="star">
    <param>215 + 10 * $rand</param>
   </bulletRef>
  </fire>

  <wait>10</wait>

  <fire>
   <direction type="absolute">-(75 + 10 * $rand)</direction>
   <speed>1.5</speed>
   <bulletRef label="star">
    <param>-(215 + 10 * $rand)</param>
   </bulletRef>
  </fire>

  <wait>650 - 150 * $rank</wait>

</action>

<bullet label="star">
<action>

 <wait>45</wait>

 <changeSpeed>
  <speed>0</speed>
  <term>1</term>
 </changeSpeed>

 <wait>15</wait>

 <changeDirection>
  <direction type="absolute">$1</direction>
  <term>1</term>
 </changeDirection>
 <changeSpeed>
  <speed>2.0</speed>
  <term>180</term>
 </changeSpeed>

 <wait>1</wait>

 <repeat> <times>180</times><action>
  <fire>
   <direction type="relative">150 + 60 * $rand</direction>
   <bulletRef label="tail">
    <param>1.5 * (0.25 + 0.75 * $rank)</param>
   </bulletRef>
  </fire>
  <wait>1</wait>
 </action></repeat>

  <fire>
   <bulletRef label="head">
   </bulletRef>
  </fire>

 <vanish/>

</action></bullet>

<bullet label="head">
<direction type="absolute">0</direction>
<speed>0</speed>
<action>

 <repeat> <times>20 * (0.25 + 0.75 * $rank)</times><action>
  <fire>
   <direction type="absolute">360 * $rand</direction>
   <speed>(0.3 + 0.3 * $rand) * (0.25 + 0.75 * $rank)</speed>
   <bullet/>
  </fire>
 </action></repeat>

 <repeat> <times>30 * (0.25 + 0.75 * $rank)</times><action>
  <fire>
   <direction type="absolute">360 * $rand</direction>
   <speed>(0.5 + 0.5 * $rand) * (0.25 + 0.75 * $rank)</speed>
   <bullet/>
  </fire>
 </action></repeat>

 <repeat> <times>50 * (0.25 + 0.75 * $rank)</times><action>
  <fire>
   <direction type="absolute">360 * $rand</direction>
   <speed>(0.8 + 0.8 * $rand) * (0.25 + 0.75 * $rank)</speed>
   <bullet/>
  </fire>
 </action></repeat>

  <fire>
   <direction type="absolute">360 * $rand</direction>
   <speed>1.6 * (0.25 + 0.75 * $rank)</speed>
   <bullet/>
  </fire>
 <repeat> <times>12 + 24 * $rank</times><action>
  <fire>
   <direction type="sequence">360 / (12 + 24 * $rank)</direction>
   <speed>1.6 * (0.25 + 0.75 * $rank)</speed>
   <bullet/>
  </fire>
 </action></repeat>

 <vanish/>

</action></bullet>

<bullet label="tail">
<speed>0.001</speed>
<action>

 <repeat> <times>1 + 3 * $rank * $rank</times><action>
  <fire>
   <direction type="relative">-3 + 6 * $rand</direction>
   <speed>$1 * (1.0 + (0.1 + 0.2 * $rank) * $rand)</speed>
   <bullet/>
  </fire>
  <wait>1</wait>
 </action></repeat>

 <vanish/>

</action></bullet>

</bulletml>
