<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top1">
 <repeat> <times>200+$rank*200</times> <action>
  <fire>
   <direction type="aim">-50+$rand*100</direction>
   <speed>1.6</speed>
   <bullet/>
  </fire>
  <wait>2-$rank+$rand</wait>
 </action> </repeat>
</action>

<bullet label="kobati">
 <action>
  <wait>$1</wait>

  <repeat> <times>20</times> <action>
   <fire>
    <direction type="aim">0</direction>
    <speed>1.6</speed>
    <bullet/>
   </fire>

   <wait>(16-$rank*8)*3</wait>
  </action> </repeat>

  <vanish/>

 </action>
</bullet>

<action label="top2">
 <repeat> <times>8+$rank*8</times> <action>
  <fire>
   <direction type="aim">80</direction>
   <speed>1.5</speed>
   <bulletRef label="kobati">
    <param>(16-$rank*8)*3</param>
   </bulletRef>
  </fire>
  <fire>
   <direction type="aim">-80</direction>
   <speed>1.5</speed>
   <bulletRef label="kobati">
    <param>(16+$rank*8)*3</param>
   </bulletRef>
  </fire>
  <wait>16-$rank*8</wait>
  <fire>
   <direction type="aim">80</direction>
   <speed>1.5</speed>
   <bulletRef label="kobati">
    <param>(16-$rank*8)*2</param>
   </bulletRef>
  </fire>
  <fire>
   <direction type="aim">-80</direction>
   <speed>1.5</speed>
   <bulletRef label="kobati">
    <param>(16-$rank*8)*2</param>
   </bulletRef>
  </fire>
  <wait>16-$rank*8</wait>
  <fire>
   <direction type="aim">80</direction>
   <speed>1.5</speed>
   <bulletRef label="kobati">
    <param>16-$rank*8</param>
   </bulletRef>
  </fire>
  <fire>
   <direction type="aim">-80</direction>
   <speed>1.5</speed>
   <bulletRef label="kobati">
    <param>16-$rank*8</param>
   </bulletRef>
  </fire>
  <wait>16-$rank*8</wait>
 </action> </repeat>

 <wait>120</wait>
</action>

</bulletml>
