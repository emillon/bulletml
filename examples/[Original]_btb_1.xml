<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">

 <repeat> <times>2</times> <action>
  <fire>
   <bulletRef label="nway">
    <param>(8 + 28 * $rank * $rank)</param>
    <param>0.4</param>
    <param>0</param>
   </bulletRef>
  </fire>
  <wait>20</wait>

  <fire>
   <bulletRef label="nway">
    <param>(8 + 28 * $rank * $rank)</param>
    <param>0.4</param>
    <param>(360 / (8 + 28 * $rank * $rank)) * (3/4)</param>
   </bulletRef>
  </fire>
  <wait>20</wait>

  <fire>
   <bulletRef label="nway">
    <param>(8 + 28 * $rank * $rank)</param>
    <param>0.4</param>
    <param>(360 / (8 + 28 * $rank * $rank)) * (1/2)</param>
   </bulletRef>
  </fire>
  <wait>20</wait>

  <fire>
   <bulletRef label="nway">
    <param>(8 + 28 * $rank * $rank)</param>
    <param>0.4</param>
    <param>(360 / (8 + 28 * $rank * $rank)) * (3/4)</param>
   </bulletRef>
  </fire>
  <wait>20</wait>

  <fire>
   <bulletRef label="nway">
    <param>(8 + 28 * $rank * $rank)</param>
    <param>0.4</param>
    <param>(360 / (8 + 28 * $rank * $rank))</param>
   </bulletRef>
  </fire>
  <wait>20</wait>

  <fire>
   <bulletRef label="nway">
    <param>(8 + 28 * $rank * $rank)</param>
    <param>0.4</param>
    <param>(360 / (8 + 28 * $rank * $rank)) * (1/4)</param>
   </bulletRef>
  </fire>
  <wait>20</wait>

  <fire>
   <bulletRef label="nway">
    <param>(8 + 28 * $rank * $rank)</param>
    <param>0.4</param>
    <param>(360 / (8 + 28 * $rank * $rank)) * (1/2)</param>
   </bulletRef>
  </fire>
  <wait>20</wait>

  <fire>
   <bulletRef label="nway">
    <param>(8 + 28 * $rank * $rank)</param>
    <param>0.4</param>
    <param>(360 / (8 + 28 * $rank * $rank)) * (1/4)</param>
   </bulletRef>
  </fire>
  <wait>20</wait>

 </action></repeat>

 <wait>80</wait>

 <repeat> <times>10</times> <action>

  <fire>
   <bulletRef label="nwayaim">
    <param>(8 + 28 * $rank * $rank)</param>
    <param>0.8 + 0.6 * $rank</param>
    <param>(360 / (8 + 28 * $rank * $rank)) / 2</param>
   </bulletRef>
  </fire>
  <fire>
   <bulletRef label="nwayaim">
    <param>(8 + 28 * $rank * $rank)</param>
    <param>1.0 + 0.6 * $rank</param>
    <param>(360 / (8 + 28 * $rank * $rank)) / 4</param>
   </bulletRef>
  </fire>
  <fire>
   <bulletRef label="nwayaim">
    <param>(8 + 28 * $rank * $rank)</param>
    <param>1.2 + 0.6 * $rank</param>
    <param>0</param>
   </bulletRef>
  </fire>
  <wait>30</wait>

 </action></repeat>

 <wait>60</wait>

</action>

<bullet label="nway">
<direction type="absolute">0</direction>
<speed>0</speed>
<action>

 <fire>
  <direction type="absolute">$3</direction>
  <speed>$2</speed>
  <bullet/>
 </fire>

 <repeat> <times>$1</times> <action>
  <fire>
   <direction type="sequence">360 / $1</direction>
   <speed>$2</speed>
   <bullet/>
  </fire>
 </action></repeat>

 <vanish/>

</action></bullet>

<bullet label="nwayaim">
<direction type="absolute">0</direction>
<speed>0</speed>
<action>

 <fire>
  <direction type="aim">$3</direction>
  <speed>$2</speed>
  <bullet/>
 </fire>

 <repeat> <times>$1</times> <action>
  <fire>
   <direction type="sequence">360 / $1</direction>
   <speed>$2</speed>
   <bullet/>
  </fire>
 </action></repeat>

 <vanish/>

</action></bullet>

</bulletml>
